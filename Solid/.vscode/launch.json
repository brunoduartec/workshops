{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug TS File",
        "skipFiles": ["<node_internals>/**"],
        "program": "${file}",
        "runtimeArgs": ["-r", "ts-node/register"],
        "env": {
          "TS_NODE_PROJECT": "tsconfig.json"
        }
      }
    ]
  }